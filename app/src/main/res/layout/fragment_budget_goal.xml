<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2B326A"
    tools:context=".BudgetGoalFragment"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/goalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/pp_logo"
                android:layout_width="89dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pp_logo" />

            <TextView
                android:id="@+id/register_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold_family"
                android:text="Create Budget Goals"
                android:textColor="#AAB6E0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="24dp" />

            <!-- Dynamic content (TextViews and EditTexts for each category) will be added here -->

        </LinearLayout>
    </ScrollView>



    <Button
        android:id="@+id/saveGoalsButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#8695DC"
        android:fontFamily="@font/montserrat_medium"
        android:padding="14dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#DBD4D7"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

</LinearLayout>



