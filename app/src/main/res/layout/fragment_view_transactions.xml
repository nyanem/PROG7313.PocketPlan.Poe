<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewTransactionsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B326A"
    android:orientation="vertical"
    android:padding="16dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/pp_logo"
        android:layout_width="89dp"
        android:layout_height="76dp"
        android:contentDescription="Logo"
        app:srcCompat="@drawable/pp_logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/montserrat_semibold_family"
        android:text=" Your past Transactions"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#AAB6E0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#7886C7"
        android:fontFamily="@font/montserrat_semibold_family"
        android:text="Current Account Balance"
        android:textAlignment="center"
        android:textColor="@color/creme"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#7886C7"
        android:text="R0.00"
        android:textAlignment="center"
        android:textColor="@color/creme"
        android:textSize="32sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />


</LinearLayout>
