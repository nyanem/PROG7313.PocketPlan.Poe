<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D336B"
    android:padding="16dp"
    tools:context=".AddTransactionFragment">

    <!-- Header Row -->

    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:contentDescription="Logo"
        android:src="@drawable/pp_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <ImageView
        android:id="@+id/usericon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:contentDescription="User Icon"
        android:src="@drawable/usericon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titletextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Add a Transaction"
        android:textAlignment="center"
        android:textColor="#A9B5DF"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/logoimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/titletextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Remaining Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remaining Balance:"
                    android:textColor="#A9B5DF"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_alternates" />

                <EditText
                    android:id="@+id/balanceedittext"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates" />
            </LinearLayout>

            <!-- Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount:"
                    android:textColor="#A9B5DF"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_alternates" />

                <EditText
                    android:id="@+id/amountedittext"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:fontFamily="@font/montserrat_alternates" />
            </LinearLayout>

            <!-- Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category"
                    android:textColor="#A9B5DF"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_alternates" />

                <Spinner
                    android:id="@+id/categoryspinner"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:backgroundTint="#00BCD4"
                    android:popupBackground="@android:color/white" />
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="#A9B5DF"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_alternates" />

                <EditText
                    android:id="@+id/dateedittext"
                    android:layout_width="122dp"
                    android:layout_height="37dp"
                    android:background="#FFFEFE"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Select"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_alternates" />
            </LinearLayout>

            <!-- Upload Receipt -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload Receipt"
                    android:textColor="#A9B5DF"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_alternates" />

                <ImageButton
                    android:id="@+id/uploadButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@android:color/transparent"
                    android:contentDescription="Upload receipt" />
            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/saveutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:layout_marginTop="32dp"
                android:backgroundTint="#A9B5DF"
                android:fontFamily="@font/montserrat_alternates"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
