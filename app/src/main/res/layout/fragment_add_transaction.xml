<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2C6D"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo Row -->

        <Space
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pp_logo"
                android:layout_width="89dp"
                android:layout_height="76dp"
                android:layout_gravity="start"
                app:srcCompat="@drawable/pp_logo" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Add a Transaction"
            android:textColor="#AAB6E0"
            android:textSize="24sp"
            android:layout_gravity="center" />

        <Space android:layout_width="match_parent" android:layout_height="32dp" />

        <!-- Remaining Balance Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Remaining Balance:"
                android:textColor="#AAB6E0"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/balanceEditText"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:enabled="false"
                android:fontFamily="@font/montserrat_alternates"
                android:padding="12dp"
                android:textColor="#375E94" />

        </LinearLayout>

        <!-- Amount Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Amount:"
                android:textColor="#AAB6E0"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:fontFamily="@font/montserrat_alternates" />
        </LinearLayout>

        <!-- Category Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Category:"
                android:textColor="#AAB6E0"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#7A87CC"
                android:popupBackground="@android:color/white"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#AAB6E0"/>

        </LinearLayout>

        <!-- Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Date:"
                android:textColor="#AAB6E0"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="Select"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:textColor="#000"
                android:fontFamily="@font/montserrat_alternates" />
        </LinearLayout>

        <!-- Upload Receipt Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Upload Receipt:"
                android:textColor="#AAB6E0"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/uploadButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@android:color/transparent"
                android:contentDescription="Upload receipt" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#8695DC"
            android:fontFamily="@font/montserrat_medium"
            android:padding="14dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#DBD4D7" />

        <Space android:layout_width="match_parent" android:layout_height="32dp" />



    </LinearLayout>
</ScrollView>




