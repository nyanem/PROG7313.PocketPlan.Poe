<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B326A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
        android:id="@+id/textView2"
        android:layout_width="369dp"
        android:layout_height="95dp"
        android:fontFamily="@font/montserrat_semibold_family"
        android:gravity="center_horizontal"
        android:text="Rewards"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#AAB6E0"
        android:textSize="24sp" />

        <!--  Gift icon and rewards progress  -->

        <androidx.cardview.widget.CardView

            android:layout_width="268dp"
            android:layout_height="136dp"
            app:cardBackgroundColor="#7886C7">

            <TextView
            android:layout_width="213dp"
            android:layout_height="81dp"
            android:text="Savings Goals"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#7886C7"
            app:cardCornerRadius="30dp">            <TextView
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:text="Free Coffee Reward"
            android:textColor="#FFFFFF" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#7886C7">            <TextView
            android:layout_width="348dp"
            android:layout_height="83dp"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:text="two week streak"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="359dp"
            android:layout_height="95dp" />


        <!--  More rewards...  -->
    </LinearLayout>
</ScrollView>